<%= render 'shared/errors', obj: @chef %>

<div class="row">
	<div class="col-md-12 offset-md-1">

		<%= form_for(@chef, :html => {class: "form-horizontal", role: "form"}) do |f| %>

			<div class="form-group row">
				<div class="col-sm-2 col-form-label font-weight-bold">
					<%= f.label :chefname, "Name", class: "float-right" %>
				</div>
				<div class="col-md-8">
					<%= f.text_field :chefname, class: "form-control", placeholder: "Enter your name", autofocus: true %>
				</div>
			</div>

			<div class="form-group row">
				<div class="col-sm-2 col-form-label font-weight-bold">
					<%= f.label :email, class: "float-right" %>
				</div>
				<div class="col-md-8">
					<%= f.email_field :email, class: "form-control", placeholder: "Enter Your email" %>
				</div>
			</div>

			<div class="form-group row">
				<div class="col-sm-2 col-form-label font-weight-bold">
					<%= f.label :password, class: "float-right" %>
				</div>
				<div class="col-md-8">
					<%= f.password_field :password, class: "form-control", placeholder: "Enter Your password" %>
				</div>
			</div>

			<div class="form-group row">
				<div class="col-sm-2 col-form-label font-weight-bold">
					<%= f.label :password_confirmation, "Confirm password", class: "float-right" %>
				</div>
				<div class="col-md-8">
					<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password" %>
				</div>
			</div>

			<div class="form-group row">
				<div class="col-md-2 offset-md-2">
					<%= f.submit 'Create my account', class: "btn btn-primary btn-lg btn-xlarge" %>
				</div>
			</div>
		<% end %>
		<div class="col-md-4 offset-md-3 colormatch">
			[ <%= link_to "Cancel and return to recipes listing", recipes_path %> ]
		</div>
	</div>
</div>