 <%= render 'shared/page_title', title: "Log in" %>

 <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>


			<div class="form-group row">
				<div class="col-sm-2 col-form-label font-weight-bold">
					<%= f.label :email, class: "float-right" %>
				</div>
				<div class="col-md-8">
					<%= f.email_field :email, class: "form-control", placeholder: "Enter Your email" %>
				</div>
			</div>

			<div class="form-group row">
				<div class="col-sm-2 col-form-label font-weight-bold">
					<%= f.label :password, class: "float-right" %>
				</div>
				<div class="col-md-8">
					<%= f.password_field :password, class: "form-control", placeholder: "Enter Your password" %>
				</div>
			</div>

			<div class="form-group row">
				<div class="col-md-2 offset-md-2">
					<%= f.submit 'Log in',  class: "btn btn-primary btn-lg btn-xlarge" %>
				</div>
			</div>
		<% end %>
		<div class="col-md-4 offset-md-3 colormatch">
			[ <%= link_to "Cancel and return to recipes listing", recipes_path %> ]
		</div>